{
  "name": "tb6-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node .",
    "server": "PORT=3001 nodemon --exec babel-node src",
    "clean": "rimraf dist",
    "copy": "npm run copy:client && npm run copy:package.json",
    "build": "npm run clean && npm run build:server && npm run build:client && npm run copy",
    "dist": "zip -r dist.zip dist",
    "upload": "babel-node tasks -a upload",
    "copy:client": "cpx \"client/build/**/*\" dist/public",
    "copy:package.json": "cpx \"package*.json\" dist/",
    "build:client": "cd client && npm run build && cd ..",
    "build:server": "babel src -d dist",
    "lint": "./node_modules/.bin/eslint src/"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "body-parser": "~1.18.2",
    "connect-redis": "^3.3.3",
    "cookie-parser": "~1.4.3",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.1.1",
    "mime": "^2.2.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.20.1",
    "mongoose": "^5.0.5",
    "mongoose-auto-increment": "^5.0.1",
    "morgan": "~1.9.0",
    "multer": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "ghreleases": "^2.0.0",
    "minimist": "^1.2.0"
  }
}
